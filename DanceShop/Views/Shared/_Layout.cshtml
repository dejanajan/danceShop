<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dance Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/png" href="~/Content/Images/favicon.png" />
</head>
<body>
    <div class="navbar navbar-expand-lg bg-dark">
        <div class="container">
            <div class="navbar-header mr-4">
                <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("DanceShop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav">
                    <li class="nav-item mr-2">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item mr-2">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <main>
        <div class="container body-content">
            <div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="box jumbotron">
                            <img src="~/Content/Images/rating.png"><br />
                            <label>@Html.ActionLink("Customers", "Index", "Customers") </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box jumbotron">
                            <img src="~/Content/Images/building.png" /><br />
                            <label>@Html.ActionLink("Shops", "Index", "Shops") </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box jumbotron">
                            <img src="~/Content/Images/art.png" /><br />
                            <label>@Html.ActionLink("Equipments", "Index", "Equipments") </label>
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
    </main>

    <hr />
    <footer class="container">
        <p>&copy; @DateTime.Now.Year - DanceShop application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
